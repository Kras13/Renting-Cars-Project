@model IEnumerable<CategoriesViewModel>

<div class="">
    <form method="get">
    </form>
</div>

<div class="row">
    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Picture</th>
                <th scope="col">Name</th>
            </tr>
        </thead>
        <tbody>
            @{int i = 0; }
            @foreach (var category in Model)
            {
                <tr>
                    <th scope="row">@(++i)</th>
                    <td><img width="200" height="200" class="card-img-top" src="@category.CategoryUrl" alt="@category.Name"></td>
                    <td>@category.Name</td>
                    <td></td>
                </tr>
            }
        </tbody>
    </table>
</div>
