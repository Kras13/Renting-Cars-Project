@using CarRentingSystem.Service.Car
@model CarDetailsServiceModel

<script>
    function CustomFunc(){
        var e = document.getElementById("customInput");
        var result = e.options[e.selectedIndex].text;

        return result;
    }
</script>

<h1>
    Are you sure you want to rent the selected car.
</h1>

<div class="row">
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Make</th>
                <th scope="col">Model</th>
                <th scope="col">Year</th>
                <th scope="col">Description</th>
            </tr>
        </thead>
        <tbody>
            {
            <tr>
                <td>@Model.Make</td>
                <td>@Model.Model</td>
                <td>@Model.Year</td>
                <td>@Model.Description</td>
                <td>@Model.ImageUrl</td>
                <td></td>
            </tr>
            }
        </tbody>
    </table>
</div>

<img width="100" height="200" class="card-img-top" src="@Model.ImageUrl" alt="@Model.Make @Model.Model - @Model.Year">

@{
    int days = 3;
}

<form method="post">
    <div class="col-md-6">
        <div>
            <select class="form-control" id="customInput">
                <option value="2">1</option>
                <option value="3">2</option>
                <option value="10">3</option>
            </select>
        </div>

        <input class="btn btn-primary" type="submit" value="Save"
               asp-controller="UsersCars"
               asp-action="Rent"
               asp-route-id=@(Model.Id)
               asp-route-days=3 />
    </div>
</form>