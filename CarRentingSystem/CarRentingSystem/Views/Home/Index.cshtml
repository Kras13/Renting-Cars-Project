@model IndexViewModel


@{
    ViewData["Title"] = "Home Page";
}

@{
    var cars = Model.Cars;
    var firstCar = cars.Any() ? cars[0] : null;
    var secondCar = cars.Count > 1 ? cars[1] : null;
    var thirdCar = cars.Count > 2 ? cars[2] : null;
}

@if (TempData["Success"] != null)
{
    <p class="alert alert-success" id="successMessage">@TempData["Success"]</p>
}

@if (!cars.Any())
{
    <div class="jumbotron">
        <h1 class="display-4">Welcome to rent cars!</h1>
        <p class="lead">There are not available cars.</p>
        <hr class="my-4">
        <p class="lead">
            <a asp-controller="Cars" asp-action="Add" class="btn btn-primary btn-lg" role="button">Add new car</a>
        </p>
    </div>
}

<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
        @if (firstCar != null)
        {
            <div class="carousel-item">
                <img class="d-block w-100" src="@firstCar.ImageUrl" alt="@firstCar.Make @firstCar.Model">
                <div class="carousel-caption d-none d-md-block">
                    <h5><a class="btn-info" asp-controller="Cars" asp-action="Details" asp-route-id="@firstCar.Id">@firstCar.Make @firstCar.Model - @firstCar.Year</a></h5>
                </div>
            </div>
        }
        @if (secondCar != null)
        {
            <div class="carousel-item">
                <img class="d-block w-100" src="@secondCar.ImageUrl" alt="@secondCar.Make @secondCar.Model">
                <div class="carousel-caption d-none d-md-block">
                    <h5><a class="btn-info" asp-controller="Cars" asp-action="Details" asp-route-id="@secondCar.Id">@secondCar.Make @secondCar.Model - @secondCar.Year</a></h5>
                </div>
            </div>
        }
        @if (thirdCar != null)
        {
            <div class="carousel-item active">
                <img class="d-block w-100" src="@thirdCar.ImageUrl" alt="@thirdCar.Make @thirdCar.Model">
                <div class="carousel-caption d-none d-md-block">
                    <h5><a class="btn-info" asp-controller="Cars" asp-action="Details" asp-route-id="@thirdCar.Id">@thirdCar.Make @thirdCar.Model - @thirdCar.Year</a></h5>
                </div>
            </div>
        }
    </div>
    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<p></p>

<div class="jumbotron">
    <div class="row">
        <div class="col-md-4">
            Total Cars : @Model.TotalCars
        </div>
        <div class="col-md-4">
            Total Users : @Model.TotalUsers
        </div>
        <div class="col-md-4">
            Total Rents : @Model.TotalRents
        </div>
    </div>
</div>

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>
