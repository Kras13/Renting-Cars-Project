@model AddCarFormModel

@{
    ViewData["Title"] = "Add Car";
}

<div class="container">
    <div class="row">
        <div class="offset-md-2 col-md-8 col-sm-12">
            <h2 class="heading-margin text-center">Add Car </h2>
            <form method="post">
                <div class="form-group">
                    <label asp-for="Make"></label>
                    <input asp-for="Make" class="form-control" placeholder="BMW, Audi, etc...">
                    <span asp-validation-for="Make" class="small text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Model"></label>
                    <input asp-for="Model" class="form-control" placeholder="330i, A3, etc...">
                    <span asp-validation-for="Model" class="small text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description"></label>
                    <textarea asp-for="Description" class="form-control" placeholder="Vehicle description" rows="3"></textarea>
                </div>
                <div class="form-group">
                    <label asp-for="ImageUrl">Image Url</label>
                    <input asp-for="ImageUrl" class="form-control" placeholder="Yor URL">
                </div>
                <div class="form-group">
                    <label asp-for="Year">Year</label>
                    <input asp-for="Year" class="form-control" placeholder="2021">
                    <span asp-validation-for="Year" class="small text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CategoryId"></label>
                    <select asp-for="CategoryId" class="form-control">
                        @foreach (var category in Model.Categories)
                        {
                            <option value="@category.Id">@category.Name</option>
                        }
                    </select>
                </div>

                <input class="btn btn-primary" type="submit" value="Save" />
            </form>
        </div>
    </div>
</div>