@model CarDetailsViewModel

<div class="row">
    <div class="card">
        <div id="customDiv">
            <img width="100" height="200" class="card-img-top" src="@Model.ImageUrl" alt="@Model.Make @Model.Model - @Model.Year">
            <div class="card-body text-center">
                <h5 class="card-title text-center">@Model.Make @Model.Model (@Model.Year)</h5>
            </div>
        </div>
    </div>
</div>