@model AllCarsQueryModel

<script language="JavaScript">
    function refreshPage() {
        const selectedBrand = localStorage.getItem("Brand");
        localStorage.setItem("brand", selectedBrand);

        window.location.reload();
    }
</script>

@if (TempData["Success"] != null)
{
    <p class="alert alert-success" id="successMessage">@TempData["Success"]</p>
}

<form method="get" id="customForm">
    <div class="container">
        <div class="row">
            <div class="col-sm">
                <label asp-for="Brands"></label>
                <select asp-for="Brand" class="form-control">
                    <option value="">All</option>
                    @foreach (var brand in Model.Brands)
                    {
                        <option value="@brand">@brand</option>
                    }
                </select>
            </div>
            <div>
                <label asp-for="CarsPerPage"></label>
                <select asp-for="CarsPerPage" class="form-control">
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value="10">10</option>
                </select>
            </div>
            <div class="col-sm">
                <label asp-for="SearchCrit"></label>
                <input asp-for="SearchCrit" class="form-control" placeholder="BMW, Audi, Mercedes, VW.....">
            </div>
            <div class="col-sm">
                <label asp-for="Sorting"></label>
                <select asp-for="Sorting" class="form-control">
                    <option value="0" selected>DateCreated</option>
                    <option value="1">Year</option>
                    <option value="2">Brand And Model</option>
                </select>
            </div>
            <input type="submit" id="customInput" value="Search">
        </div>
    </div>
</form>

@{
    int currentPage = Model.CurrentPage - 1;
    if (currentPage < 1)
    {
        currentPage = 1;
    }

    var lastPage = Math.Ceiling((double)Model.TotalCars / Model.CarsPerPage);

    if (lastPage == 0)
    {
        lastPage = 1;
    }
}

<div class="row">
    <div class="col-md-6">
        <a class="btn btn-primary @(Model.CurrentPage == 1 ? "disabled" : string.Empty) float-left"
           asp-controller="Cars"
           asp-action="All"
           asp-route-currenPage="@currentPage"
           asp-route-brand="@Model.Brand"
           asp-route-searchCrit="@Model.SearchCrit"
           asp-route-sorting="@((int)Model.Sorting)">Previous</a>
    </div>
    <div class="col-md-6">
        <a class="btn btn-primary @(Model.CurrentPage == lastPage ? "disabled" : string.Empty) float-right"
           asp-controller="Cars"
           asp-action="All"
           asp-route-currentPage="@(Model.CurrentPage + 1)"
           asp-route-brand="@Model.Brand"
           asp-route-searchCrit="@Model.SearchCrit"
           asp-route-sorting="@((int)Model.Sorting)">Next</a>
    </div>
</div>


<div class="row">
    @foreach (var car in Model.Cars)
    {
        <div class="card">
            <div id="customDiv">
                <img width="100" height="200" class="card-img-top" src="@car.ImageUrl" alt="@car.Make @car.Model - @car.Year @car.Category">
                <div class="card-body text-center">
                    <h5 class="card-title text-center">@car.Make @car.Model (@car.Year)</h5>
                    <a asp-controller="Cars" asp-action="Details" asp-route-id="@car.Id">View Details</a>
                </div>
            </div>
        </div>
    }
</div>